<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>숫자</title>
</head>
<body>
    <script>
        // 배열의 요소별 등장 횟수를 세는 함수
        function countOccurrences(array) {
            const count = {};  // 각 숫자의 등장 횟수를 저장할 객체

            // 배열의 각 요소를 순회하면서 등장 횟수 카운팅
            array.forEach(num => {
                // 해당 숫자가 count 객체에 있으면 그 값을 1 증가시키고,
                // 없으면 0에서 시작해 1로 설정하기.........
                count[num] = (count[num] || 0) + 1;  
            });

            // 결과 출력
            // count 객체의 각 키(숫자)를 순회
            for (let key in count) {
                // 숫자와 그 숫자의 등장 횟수를 콘솔에 출력
                console.log(`${key} -> ${count[key]}개`);  
            }
        }

        // 테스트 예시
        const array = [1, 1, 2, 3, 2, 4];  // 테스트를 위한 배열
        countOccurrences(array);  // 함수 호출하여 결과 출력
    </script>
</body>
</html>
