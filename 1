<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>숫자세기</title>
    <script>
        // 배열의 요소별 등장 횟수를 세는 함수
        function countOccurrences(array) {
            const count = {};  // 각 숫자의 등장 횟수를 저장할 객체

            // 배열의 각 요소를 순회하면서 등장 횟수 카운팅
            array.forEach(num => {
                count[num] = (count[num] || 0) + 1;  // 해당 숫자가 등장할 때마다 카운트 증가
            });

            // 결과 출력
            for (let key in count) {
                console.log(`${key} -> ${count[key]}개`);  // 숫자와 그 숫자의 등장 횟수 출력
            }
        }

        // 테스트 하자면......
        const array = [1, 1, 2, 3, 2, 4];  // 테스트를 위한 배열
        countOccurrences(array);  // 함수 호출하여 결과 출력
    </script>
</body>
</html>
